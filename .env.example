# .env.example
# =============================================================================
# Judges/Users: Rename this file to .env.local and add your own keys
# =============================================================================

# Backend Server Config (not exposed to frontend)
PORT=7010
ALLOWED_ORIGINS=http://localhost:7001,http://localhost:7010,http://localhost:7002
API_KEY=your-secure-api-key-here
DOTENV_CONFIG_PATH=.env.local

# Frontend Config (MUST start with VITE_ to be accessible in browser)
VITE_OPENROUTER_API_KEY=your-openrouter-api-key-here
VITE_API_URL=http://localhost:7010
VITE_API_KEY=your-secure-api-key-here
VITE_BACKEND_URL=http://localhost:7010

# =============================================================================
# OPTIONAL API KEYS (for production enhancements)
# =============================================================================

# --- WhatsApp/Twilio (for employee notifications) ---
VITE_TWILIO_ACCOUNT_SID=your-twilio-account-sid
VITE_TWILIO_AUTH_TOKEN=your-twilio-auth-token
VITE_TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# --- Google Maps (for zone heatmaps) ---
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# --- SMS Gateway (for OTP/alerts) ---
VITE_SMS_GATEWAY_API_KEY=your-sms-api-key
VITE_SMS_SENDER_ID=MCDHRM

# --- Blockchain (for immutable service book) ---
VITE_BLOCKCHAIN_RPC_URL=https://polygon-mainnet.infura.io/v3/your-project-id
VITE_BLOCKCHAIN_PRIVATE_KEY=your-wallet-private-key
